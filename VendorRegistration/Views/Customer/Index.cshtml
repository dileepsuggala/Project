@model List<VendorRegistration.Models.Newspaper>
@{
    ViewBag.Title = "Index";
}



<!DOCTYPE html>

<html>


<body background="~/image/Newspaper.jpg" style="background-repeat:no-repeat;background-size:cover">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NewsEdge", "FirstPage", "First", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse navbar-right">
                <ul class="nav navbar-nav">
                    <p class="navbar-text">
                        Welcome @HttpContext.Current.User.Identity.Name
                    </p>
                    <li>
                        @Html.ActionLink("Checkout", "Total", "Customer")
                    </li>
                    <li>
                        @Html.ActionLink("Logout", "Logout", "Customer")
                    </li>
                </ul>
            </div>
        </div>
    </div>

   
    <br />
<div class="row">
    <div class="col-lg-10 col-md-10 col-sm-10">
        @if (TempData["total"] == null)
        {
        <h3>Total Bill: Rs 0</h3>
        }
        else
        {
            <h3>Total Bill:Rs @TempData["total"]</h3>
        }

    </div>
</div>
  


    <br />
    <br />
    <div class="container">
        <div class="row">

            @foreach (var item in Model)
            {
                <!-- Container (Pricing Section) -->

                <div class="col-sm-4">
                    <div class="panel panel-danger text-center">
                        <div class="panel-heading">
                           
                            <h1>@item.NewspaperName </h1>
                        </div>

                        <div class="panel-footer">
                            <h3> Rs. @item.Price /
                            day</h3>

                            @Html.ActionLink("Subscribe", "Addtocart", new { id=@item.NewspaperId})
                            

                        </div>
                    </div>
                </div>









            }
        </div>
    </div>






    @section Scripts
    {
        <script src="~/Scripts/jquery.validate.min.js"></script>
        <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    }
</body>
    </html>



